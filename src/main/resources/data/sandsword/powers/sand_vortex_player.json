{
    "name": "Sand Vortex",
    "description": "Summons a powerful sand vortex, pulling enemies towards its center. Offers the choice to be propelled outward from its core.",
    "badges": [
        {
            "type": "origins:keybind",
            "sprite": "origins:textures/gui/badge/active.png",
            "text": "Trigger with %s"
        },
        {
            "type": "origins:keybind",
            "sprite": "origins:textures/gui/badge/toggle.png",
            "text": "Toggle Self Propulsion with [Quaternary]"
        }
    ],
    "type": "origins:multiple",
    "cd": {
        "type": "origins:cooldown",
        "cooldown": 400,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 8
        }
    },
    "active": {
        "type": "origins:active_self",
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_cd",
            "comparison": "==",
            "compare_to": 0
        },
        "key": {
            "key": "key.origins.ternary_active"
        },
        "cooldown": 1,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:raycast",
                    "distance": 50,
                    "entity": true,
                    "block": true,
                    "hit_action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:trigger_cooldown",
                                "power": "*:*_cd"
                            },
                            {
                                "type": "origins:execute_command",
                                "command": "playsound minecraft:entity.phantom.flap master @p ~ ~ ~ 10 1.7"
                            },
                            {
                                "type": "origins:delay",
                                "ticks": 1,
                                "action": {
                                    "type": "origins:execute_command",
                                    "command": "playsound minecraft:item.elytra.flying master @p ~ ~ ~ 0.4 2"
                                }
                            },
                            {
                                "type": "origins:delay",
                                "ticks": 1,
                                "action": {
                                    "type": "origins:execute_command",
                                    "command": "playsound minecraft:entity.phantom.flap master @p ~ ~ ~ 10 1.7"
                                }
                            }
                        ]
                    },
                    "command_at_hit": "function sandsword:hit"
                },
                {
                    "type": "origins:exhaust",
                    "amount": 12
                }
            ]
        }
    },
    "toggle": {
        "type": "origins:toggle",
        "active_by_default": false,
        "key": {
            "key": "key.origins.quaternary_active"
        }
    },
    "atributepower": {
        "type": "apoli:action_over_time",
        "interval": 1,
        "condition": 
                {
                    "type": "origins:power_active",
                    "power": "sandsword:sand_vortex_player_toggle"
                },
        "entity_action": {
            "type": "origins:execute_command",
            "command": "function sandsword:vortex2"
        }
    }
}